@model ManuShopWeb.Models.VersionesProducto

@{
    ViewData["Title"] = "EditarVersionProducto";
    String email = ViewData["EMAIL"].ToString();
}

<h1>EditarVersionProducto</h1>

<h4>VersionesProducto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="id" value="@Model.id" hidden class="form-control" />
            <input name="email" value="@email" hidden class="form-control" />
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input name="nombre" value="@Model.nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Precio</label>
                <input name="precio" value="@Model.precio" class="form-control" />
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Detalles</label>
                <textarea class="form-control" value="@Model.detalles" name="detalles" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar datos" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-version="@Model.producto" asp-route-email="@email" class="btn btn-outline-dark">Back to List</a>
</div>

