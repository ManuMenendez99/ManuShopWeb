@model ManuShopWeb.Models.Producto

@{
    ViewData["Title"] = "Create";
    List<Marca> marcas = ViewData["MARCAS"] as List<Marca>;
    String email = ViewData["EMAIL"].ToString();
}

<h1>Create</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Marca</label>
                <select name="marca" class="form-control" id="exampleFormControlSelect1">
                    @foreach (Marca marca in marcas)
                    {
                        <option value="@marca.id">@marca.nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input name="nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label>Precio</label>
                <input type="number" name="precio" class="form-control" />
            </div>
            <input hidden name="email" value="@email" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>