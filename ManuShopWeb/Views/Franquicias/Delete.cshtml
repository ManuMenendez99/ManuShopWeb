@model ManuShopWeb.Models.Franquicia

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Franquicia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input name="jefe" value="@Model.jefe" hidden/>
        <input name="nombre" value="@Model.nombre" hidden/>
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
    </form>
    @if(Model != null)
    {
        <a asp-action="MisFranquicias" class="btn btn-outline-dark" asp-route-id="@Model.jefe">Back to List</a>
    }
</div>
