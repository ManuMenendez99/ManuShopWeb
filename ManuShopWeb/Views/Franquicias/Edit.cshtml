@model ManuShopWeb.Models.Franquicia

@{
    ViewData["Title"] = "Edit";
    int jefe = int.Parse(ViewData["JEFE"].ToString());
}

<h1>Editar</h1>

<h4>Franquicia</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="id" hidden class="control-label"></label>
                <input asp-for="id" hidden class="form-control" />
                <span asp-validation-for="id" hidden class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="jefe" hidden class="control-label"></label>
                <input asp-for="jefe" hidden class="form-control" />
                <span asp-validation-for="jefe" hidden class="text-danger"></span>
            </div>
            <input type="number" hidden name="jefe" value="@jefe" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MisFranquicias" asp-route-id="@jefe" class="btn btn-outline-dark">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
