
@{
    ViewData["Title"] = "CrearTipoMesa";
    int tienda = int.Parse(ViewData["TIENDA"].ToString());
}

<h1 class="display-4">Crear tipo de mesa</h1>

<form method="post">
    <div class="form-group">
        <label class="control-label">Nombre</label>
        <input name="nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Detalles</label>
        <textarea class="form-control" name="detalles" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <input name="tienda" hidden value="@tienda"/>

    <button type="submit" class="btn btn-outline-primary">Crear tipo de mesa</button>
</form>

