@model ManuShopWeb.Models.Persona

@{
    ViewData["Title"] = "register";

    String mensaje = ViewData["MENSAJE"] as String;
    String titulo = ViewData["TITULO"] as String;
    String tipo = ViewData["TIPO"] as String;
    String mostrarMensaje = ViewData["MOSTRARMENSAJE"] as String;
}

<h1></h1>

<h4>Crea tu cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="form-group col-md-4">
                    <label asp-for="nombre" class="control-label"></label>
                    <input asp-for="nombre" class="form-control" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="apellidos" class="control-label"></label>
                    <input asp-for="apellidos" class="form-control" />
                    <span asp-validation-for="apellidos" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="contrasena" class="control-label"></label>
                    <input asp-for="contrasena" type="password" class="form-control" />
                    <span asp-validation-for="contrasena" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="fechaNacimiento" class="control-label"></label>
                    <input asp-for="fechaNacimiento" type="date" class="form-control" />
                    <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="telefono" class="control-label"></label>
                    <input asp-for="telefono" class="form-control" type="number" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="tiposPersona" class="control-label"></label>
                <select asp-for="tiposPersona" class="form-control" value="2">
                    <option value="1">Trabajador</option>
                    <option value="2">Cliente</option>
                </select>
                <span asp-validation-for="tiposPersona" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center mt-5">
                <input type="submit" value="Create" class="mx-2 w-25 btn btn-outline-success" />

                @Html.ActionLink("Entrar con tu cuenta", "login", new { }, new { @class = "mx-2 w-25 btn btn-outline-warning" })
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(function () {
            $(window).ready(function () {
                if (("@mostrarMensaje" == "true")) {
                    if ("@(tipo)" == "SUCCESS") {
                        toastr.success("@(mensaje)" , "@(titulo)" );
                    } else if ("@(tipo)" == "INFO") {
                        toastr.info("@mensaje", "@titulo");
                    } else if ("@(tipo)" == "DANGER") {
                        toastr.danger("@mensaje", "@titulo");
                    } else if ("@(tipo)" == "WARNING") {
                        toastr.warning("@mensaje", "@titulo");
                    }
                }
            })
        })
    </script>

}
